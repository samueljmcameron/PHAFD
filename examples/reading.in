# set global parameters


domain boxdims 128.0 128.0 128.0 boxorigin -64.0 -64.0 -64.0

grid_style 32 32 32 concentration

grid_populate constant concentration 0.2 0.05 ${seed1}

read_atoms empty_p%.data

# can either use grid_setup to read in old data or create new grid data

pair gridatom/gaussian 2.0
pairCoeffs 0 phi 0.9 epsilon 0.8 nucwidth 4.0
pairCoeffs 1 phi 0.1 epsilon 0.1 nucwidth 4.0

pair lj/cut 4.0 1.0 3.5636

neighbor 8.0

group nt_pmers molecule 0

fix atom/semiflexible/notether nt_pmers nt_pmers ${seed2} bondlength 4.0 zeta_para 0.00885 zeta_perp 0.0177 bending 206.0 temp 4.114

fix grid/conjugate/volfrac volfrac ${seed3} mobility 100.0 temp 4.114 volFH 10.0 gamma 100.0

fix grid/floryhuggins chempot temp 4.114 chi 3.0 volFH 10.0



compute pair droppolyforces gridatom/gaussian


dump atoms atom/owned vtkfiles/atom_p% 10 attributes 5 x ux ix F c_droppolyforces

dump realgrid grid vtkfiles/field_p% 10 attributes 2 phi nonlinear

timestep 0
dt 1e-5

run_until_touching 100 0.6
